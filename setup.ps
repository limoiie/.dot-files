Set-ExecutionPolicy unrestricted
Set-ExecutionPolicy -Scope Process -ExecutionPolicy Bypass

$DOT_FILES_ROOT=${HOME}\.dot-files
$DOT_CONFIG_HOME=${DOT_FILES_ROOT}\xdg-config
$XDG_CONFIG_HOME=${ENV:APPDATA}

% install system bins
choco install -y 7zip fzf git neovim powertoys rustup vscode

% install cargo bins
cargo install bat fd-find lsd ripgrep

% install powershell modules
Install-Module -Name PSEverything,PSReadLine,ZLocation -Force -Confirm:$false

% configure powershell
New-Item -ItemType SymbolicLink -Path ${PROFILE} -Target ${DOT_FILES_ROOT}\Microsoft.PowerShell_profile.ps1

% configure lsd
New-Item -ItemType SymbolicLink -Path ${XDG_CONFIG_HOME}\lsd -Target ${DOT_CONFIG_HOME}\lsd

